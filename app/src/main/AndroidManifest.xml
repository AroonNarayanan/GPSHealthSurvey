<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gpshealthsurvey.gpshealthsurvey" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/flag"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MarkHouse"
            android:label="@string/title_activity_mark_house"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gpshealthsurvey.gpshealthsurvey.HomeScreen" />
        </activity>
        <activity
            android:name=".SurveyHouse"
            android:label="@string/title_activity_survey_house"
            android:parentActivityName=".MarkHouse" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gpshealthsurvey.gpshealthsurvey.MarkHouse" />
        </activity>
        <activity
            android:name=".Sync"
            android:label="@string/title_activity_sync"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gpshealthsurvey.gpshealthsurvey.HomeScreen" />
        </activity>
        <activity
            android:name=".SampleData"
            android:label="@string/title_activity_sample_data"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gpshealthsurvey.gpshealthsurvey.HomeScreen" />
        </activity>
        <activity
            android:name=".CreateSurvey"
            android:label="@string/title_activity_create_survey"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gpshealthsurvey.gpshealthsurvey.HomeScreen" />
        </activity>
    </application>

</manifest>
